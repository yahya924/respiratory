pipeline {
    agent any
      stages {
        stage("Pull") {
          steps{
               script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                        credentialsId: 'GitHub',
                        url: 'https://github.com/yahya924/respiratory.git']]])
                }
            }
        }
        stage("Build") {
          steps{
               script {
                   sh " ansible-playbook build.yml -i host.yml" 
                }
            }
        }
          stage("Docker") {
          steps{
               script {
                   sh " ansible-playbook docker.yml -i host.yml" 
                }
            }
        }
       }
       }
