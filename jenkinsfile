pipeline {
    agent any
      stages {
        stage("Pull") {
          steps{
               script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                        credentialsId: 'GitHub',
                        url: 'https://github.com/yahya924/respiratory.git']]])
                }
            }
        }
        stage("Build") {
          steps{
               script {
                   dir("/home/vagrant/respiratory/my-app/Ansible") {
                   sh "ansible-playbook build.yml -i inventory/host.yml" }
                }
            }
        }
       }
       }
